//CPP program to initialize a vector from an array. 
#include<bits/stdc++.h>

int main()
{
    int a[] = {10,20,30,40};
    int n = sizeof(a)/sizeof(a[0]);
    
    std::vector<int> vect(a,a+n);
    for(auto elem:vect)
    std::cout<<elem<< " ";
    
    std::cout<<"\n vect.size() = "<<vect.size();
    std::cout<<" vect.capacity() = "<<vect.capacity();
}


output:
10 20 30 40                                                                                                           
 vect.size() = 4 vect.capacity() = 4
